<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_dialog_bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="31dp"
            android:orientation="vertical">

            <!-- Accent Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="25dp"
                android:text="Accent"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Accent Classic Series Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="25dp"
                    android:layout_weight="1"
                    android:text="Classic"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <!-- Accent Dream Series Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:text="Dream"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!-- Accent Colors -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="25dp"
                    android:paddingEnd="20dp">

                    <ImageButton
                        android:id="@+id/blue_accent_image_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_accent_selector"
                        android:backgroundTint="@color/blue_accent"
                        android:src="@drawable/ic_check_button"/>

                    <ImageButton
                        android:id="@+id/yellow_green_accent_image_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_accent_selector"
                        android:backgroundTint="@color/yellow_green_accent" />

                    <ImageButton
                        android:id="@+id/lime_accent_image_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_accent_selector"
                        android:backgroundTint="@color/lime_accent"/>

                    <ImageButton
                        android:id="@+id/orchid_accent_image_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_accent_selector"
                        android:backgroundTint="@color/orchid_accent"/>

                    <ImageButton
                        android:id="@+id/floral_accent_image_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_accent_selector"
                        android:backgroundTint="@color/floral_accent"/>

                    <ImageButton
                        android:id="@+id/lavender_accent_image_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/button_accent_selector"
                        android:backgroundTint="@color/lavender_accent"/>
                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:weightSum="2">

                <!-- Theme -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:text="Theme"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- App Theme -->
                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginEnd="7dp">

                            <ImageButton
                                android:id="@+id/light_theme_image_button"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/button_theme_selector"
                                android:src="@drawable/ic_light_filled"/>

                            <LinearLayout
                                android:id="@+id/checked_light_theme_linear_layout"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end|bottom"
                                android:background="@drawable/view_checked_bg"
                                android:backgroundTint="@color/accent">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="end|bottom"
                                    android:src="@drawable/ic_check"
                                    android:padding="3dp"/>

                            </LinearLayout>

                        </FrameLayout>


                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageButton
                                android:id="@+id/dark_theme_image_button"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/button_theme_selector"
                                android:src="@drawable/ic_dark_outlined"/>

                            <LinearLayout
                                android:id="@+id/checked_dark_theme_linear_layout"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end|bottom"
                                android:background="@drawable/view_checked_bg"
                                android:backgroundTint="@color/accent">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="end|bottom"
                                    android:src="@drawable/ic_check"
                                    android:padding="3dp"/>

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>


                </LinearLayout>

                <!-- App Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="App Icon"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- App Icon Theme -->
                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginEnd="7dp">

                            <ImageButton
                                android:id="@+id/classic_app_icon_image_button"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/button_app_icon_selector"
                                android:src="@drawable/ic_tap2gradient_logo_classic"/>

                            <LinearLayout
                                android:id="@+id/checked_classic_app_icon_linear_layout"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end|bottom"
                                android:background="@drawable/view_checked_bg"
                                android:backgroundTint="@color/accent">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="end|bottom"
                                    android:src="@drawable/ic_check"
                                    android:padding="3dp"/>

                            </LinearLayout>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <ImageButton
                                android:id="@+id/dream_app_icon_image_button"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/button_app_icon_selector"
                                android:src="@drawable/ic_tap2gradient_logo_dream"/>

                            <LinearLayout
                                android:id="@+id/checked_dream_app_icon_linear_layout"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end|bottom"
                                android:background="@drawable/view_checked_bg"
                                android:backgroundTint="@color/accent">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="end|bottom"
                                    android:src="@drawable/ic_check"
                                    android:padding="3dp"/>

                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="57dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_button_customize_app"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Cancel"
                    android:textColor="@color/accent"
                    android:textFontWeight="600"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/apply_button_customize_app"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginEnd="20dp"
                    android:text="Apply"
                    android:textColor="@color/accent"
                    android:textFontWeight="600"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>


            </LinearLayout>

        </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
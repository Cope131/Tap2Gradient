<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_dialog_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title & Close Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="31dp"
            android:paddingBottom="40dp">

            <!-- Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copy Gradient Code"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:fontFamily="@font/quicksand"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="for Developers"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/quicksand"
                    android:layout_alignParentStart="true"/>

            </LinearLayout>


            <!-- Close Button -->
            <ImageButton
                android:id="@+id/close_copy_gradient_code_app_compat_image_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"
                android:background="@drawable/close_button_selector" />

        </RelativeLayout>

        <!-- Gradient Code CSS Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/css_code_gradient_color_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="code"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_outline"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20sp"
                        android:paddingVertical="15sp"
                        android:layout_alignParentStart="true"
                        android:text="CSS"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/quicksand"/>

                    <!-- Color 1 Copy Value Button -->
                    <ImageButton
                        android:id="@+id/copy_css_code_image_button"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_copy_value"
                        android:background="@drawable/copy_button_selector"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Gradient Code Swift Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/swift_code_gradient_color_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="code"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_outline"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20sp"
                        android:paddingVertical="15sp"
                        android:layout_alignParentStart="true"
                        android:text="Swift UI"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/quicksand"/>

                    <!-- Color 1 Copy Value Button -->
                    <ImageButton
                        android:id="@+id/copy_swift_code_image_button"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_copy_value"
                        android:background="@drawable/copy_button_selector"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>